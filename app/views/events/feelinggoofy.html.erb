<% if @is_empty %>
  <%= render :partial => 'noevent' %>
<% else %>

  <h1>We found this Event for you</h1>

  <% @events.each do |event| %>

    <% user = event.user %>
    
    <span class="box">
      <p>
        In <%= distance_of_time_in_words(Time.now, event.date_time) %> (<%= event.date_time.strftime("%d.%m.%Y") %>)
        <%= link_to user.first_name, user_path(current_user.id) %> wants to 
        <%= link_to event.title, event %>   
        in <%= event.city %>
        at <%= event.location %> 
        with <%= event.person_limit %> other goofies
      </p>
  
      <h4>In detail this means:</h4>
      <p><div><%= event.description %></div></p>
      
      <% if @attending %>
        Lucky You! You are already attending!
      <% else %>
        <%= link_to 'Attend this event now', new_events_user_path(:event_id => event.id) %>
      <% end %>
    </span>
  <% end %>
<% end %>